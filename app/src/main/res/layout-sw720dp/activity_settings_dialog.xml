<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/llDialogBox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:orientation="vertical">
            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:background="@drawable/rounded_dialog_box_tablet_blue"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="80"
                        android:background="@drawable/rounded_corners_textbox_darkblue"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="25"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="7"
                            android:src="@drawable/settings_cog"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="61"
                            android:textColor="#FFFFFF"
                            android:textSize="75sp"
                            android:gravity="left|center"
                            android:textStyle="bold"
                            android:text="Settings"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="80"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/llScoringButtons"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivScoringButton"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="10"
                                android:src="@drawable/check_button"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="90"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvScoringButtons"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="60"
                                    android:text="scoring buttons"
                                    android:textSize="50sp"
                                    android:textStyle="bold"
                                    android:textColor="#2B6DB9"
                                    android:gravity="bottom"/>
                                <TextView
                                    android:id="@+id/tvShowScoringButtons"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="40"
                                    android:text="show scoring buttons"
                                    android:textSize="30sp"
                                    android:textColor="#2B6DB9"
                                    android:gravity="top"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llScoringSounds"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivScoringSound"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="10"
                                android:src="@drawable/plus_button"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="90"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvScoringSounds"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="60"
                                    android:text="scoring sounds"
                                    android:textSize="50sp"
                                    android:textStyle="bold"
                                    android:textColor="#2B6DB9"
                                    android:gravity="bottom"/>
                                <TextView
                                    android:id="@+id/tvShowScoringSounds"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="40"
                                    android:text="reinforcement button sounds"
                                    android:textSize="30sp"
                                    android:textColor="#2B6DB9"
                                    android:gravity="top"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llVoiceAudio"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivVoiceAudio"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="10"
                                android:src="@drawable/plus_button"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="90"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvVoiceAudio"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="60"
                                    android:text="voice audio"
                                    android:textSize="50sp"
                                    android:textStyle="bold"
                                    android:textColor="#2B6DB9"
                                    android:gravity="bottom"/>
                                <TextView
                                    android:id="@+id/tvPlaysVoiceAudio"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="40"
                                    android:text="plays audio when an image is tapped"
                                    android:textSize="30sp"
                                    android:textColor="#2B6DB9"
                                    android:gravity="top"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llMirrorFunction"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivMirrorFunction"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="10"
                                android:src="@drawable/plus_button"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="90"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvMirrorFunction"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="60"
                                    android:text="mirror function"
                                    android:textSize="50sp"
                                    android:textStyle="bold"
                                    android:textColor="#2B6DB9"
                                    android:gravity="bottom"/>
                                <TextView
                                    android:id="@+id/tvTurnOnMirror"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="40"
                                    android:text="turn on front facing camera to see yourself"
                                    android:textSize="30sp"
                                    android:textColor="#2B6DB9"
                                    android:gravity="top"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
    </LinearLayout>
</RelativeLayout>
