<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/llDialogBox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:orientation="vertical">
            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:background="@drawable/rounded_dialog_box_blue"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="80"
                        android:background="@drawable/rounded_corners_textbox_darkblue"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="25"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="8"
                            android:src="@drawable/store_confirm_icon"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="50"
                            android:textColor="#FFFFFF"
                            android:textSize="70sp"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:text="Checkout"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="15"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"/>
                    <EditText
                        android:id="@+id/etPromoCode"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="30"
                        android:background="@drawable/rounded_corners_grey"
                        android:text=""
                        android:hint="Enter Promo Code"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:paddingLeft="12dp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btApply"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:background="@drawable/rounded_corners_yellow"
                        android:text="Apply"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#FFFFFF"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
                    <ProgressBar
                        android:id="@+id/pbApplyProgress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="51"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="90">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:background="@drawable/rounded_corners_blue"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:textColor="#FFFFFF"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:text="Name"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:textColor="#FFFFFF"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:text="Price"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <TextView
                                    android:id="@+id/tvPurchase"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:textColor="#000000"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:text="Y Sound Program"/>
                                <TextView
                                    android:id="@+id/tvPurchasePrice"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:textColor="#000000"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:text="$4.99"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:background="#E8E8E8"/>
                            <LinearLayout
                                android:id="@+id/llPromo"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="horizontal"
                                android:visibility="visible">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <TextView
                                    android:id="@+id/tvPromoDescription"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:textColor="#000000"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:text="Promo Code - FREESOUND"/>
                                <TextView
                                    android:id="@+id/tvPromoPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:textColor="#000000"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:text="$0.00"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:id="@+id/vPromoSeparator"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:background="#E8E8E8"
                                android:visibility="visible"/>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <TextView
                                    android:id="@+id/tvGrandTotalTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:textColor="#000000"
                                    android:gravity="right|center"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:text="Grand Total"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2"/>
                                <TextView
                                    android:id="@+id/tvGrandTotalPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:textColor="#000000"
                                    android:gravity="left|center"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:text="$4.99"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:id="@+id/vNoPromoFiller"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="11"
                                android:visibility="gone"/>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/btBack"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="20"
                                    android:background="@drawable/rounded_corners_lightblue"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"
                                    android:textSize="35sp"
                                    android:textStyle="bold"
                                    android:text="Back"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="40"/>
                                <Button
                                    android:id="@+id/btPlaceOrder"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="30"
                                    android:background="@drawable/rounded_corners_lightgreen"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"
                                    android:textSize="35sp"
                                    android:textStyle="bold"
                                    android:text="Place Order"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="5"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
    </LinearLayout>
</RelativeLayout>
