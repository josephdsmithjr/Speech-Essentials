<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/llDialogBox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:orientation="vertical">
            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:background="@drawable/rounded_dialog_box_blue"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivThankYou"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="50"
                        android:src="@drawable/y_cards"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="80"
                        android:orientation="vertical">
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                        <TextView
                            android:id="@+id/tvThankYou"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:text="Thank you for purchasing the y sound"
                            android:gravity="center"
                            android:textColor="#2B6DB9"
                            android:textStyle="bold"
                            android:textSize="28sp"/>
                        <TextView
                            android:id="@+id/tvPurchaseIncludes"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="65"
                            android:text="Your purchase includes multiple word and sentence flashcards, sentence word swap, a memory game section and a word find game section"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="17sp"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="75"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvPleaseWait"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:text="Please wait a moment while we download your new content."
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ProgressBar
                                android:id="@+id/pbSpinnerIndeterminate"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressDrawable="@drawable/progress_bar_blue"
                                android:indeterminate="true"
                                android:visibility="visible"/>
                            <ProgressBar
                                android:id="@+id/pbSpinner"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressDrawable="@drawable/progress_bar_blue"
                                android:indeterminate="false"
                                android:max="2141"
                                android:progress="1000"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="40"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
    </LinearLayout>
</RelativeLayout>