<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rlDialogFlashCards"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="20"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"/>
                <LinearLayout
                    android:id="@+id/llGraphButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="20"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="60"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvCorrect"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:background="@drawable/starbutton_3d"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/tvWrong"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:background="@drawable/wrongbutton_3d"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="20"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60">
                <LinearLayout
                    android:id="@+id/llDialogFlashCards"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_dialog_box_blue"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="20"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="60"
                            android:background="@drawable/rounded_corners_textbox_darkblue">
                            <TextView
                                android:id="@+id/tvWordType"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textColor="#FFFFFF"
                                android:textSize="45sp"
                                android:gravity="center|bottom"
                                android:text="b - beginning"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="20"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvWord"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:textColor="#4C4C4C"
                        android:textSize="75sp"
                        android:gravity="center|top"
                        android:text="ball"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="65"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"/>
                        <ImageView
                            android:id="@+id/ivSoundImage"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="90"
                            android:src="@drawable/baseball"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"/>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/close_button"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>