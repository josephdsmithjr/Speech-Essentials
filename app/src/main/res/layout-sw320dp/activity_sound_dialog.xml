<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:orientation="vertical">
            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"/>
            <LinearLayout
                android:id="@+id/llDialogBox"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF">
                <View
                    android:id="@+id/vLeftBorder"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#0171BD"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="90"
                            android:orientation="vertical">
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>
                            <TextView
                                android:id="@+id/tvLetter"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"
                                android:textColor="#0171BD"
                                android:textSize="75sp"
                                android:textStyle="bold"
                                android:text="b"
                                android:gravity="top|center"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvLetterSound"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:textColor="#0171BD"
                        android:textSize="35sp"
                        android:text="/y/"
                        android:gravity="top|center"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"/>
                    <ImageView
                        android:id="@+id/ivQuestion"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:src="@drawable/tips_button"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"/>
                </LinearLayout>
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="75"
                    android:orientation="vertical"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="outsideOverlay"
                    android:verticalScrollbarPosition="left"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:background="#E7E1E1">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="97.5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/llFlashcards"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/wordsflashcards"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivFlashcardsArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/arrow_right_red"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llRepetitive"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/sentences_flashcards"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivRepetitiveArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/arrow_right_yellow"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llDifferent"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/sentences_wordswap"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivDifferentArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/arrow_right_yellow"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llMatching"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_memory"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivMatchingArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/arrow_right_green"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llWordFind"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_wordfind"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivWordFindArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/arrow_right_green"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llPuzzle"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_puzzle"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivPuzzleArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/locked_icon"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llCreateWord"
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="85"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_createword"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="15"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                    <ImageView
                                        android:id="@+id/ivCreateWordArrow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="50"
                                        android:src="@drawable/locked_icon"
                                        android:visibility="visible"/>
                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="25"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                <View
                    android:id="@+id/vRightBorder"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#0171BD"/>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"/>
    </LinearLayout>
</RelativeLayout>