<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:orientation="vertical">
            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <LinearLayout
                android:id="@+id/llDialogBox"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="94"
                android:orientation="horizontal"
                android:background="@drawable/rounded_dialog_box_blue">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="35"
                    android:orientation="vertical">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"/>
                    <TextView
                        android:id="@+id/tvLetter"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:textColor="#0171BD"
                        android:textSize="145sp"
                        android:textStyle="bold"
                        android:text="y"
                        android:gravity="bottom|center"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tvLetterSound"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:textColor="#0171BD"
                        android:textSize="45sp"
                        android:text="/y/"
                        android:gravity="top|center"/>
                    <ImageView
                        android:id="@+id/ivQuestion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/tips_button"
                        android:layout_marginBottom="45dp"
                        android:layout_marginLeft="45dp"/>
                </LinearLayout>
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="65"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="outsideOverlay"
                    android:verticalScrollbarPosition="left"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:background="#E7E1E1">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="97.5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/llFlashcards"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/wordsflashcards"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <ImageView
                                    android:id="@+id/ivFlashcardsArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/arrow_right_red"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llRepetitive"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/sentences_flashcards"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/ivRepetitiveArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/arrow_right_yellow"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:background="#E7E1E1"
                                android:layout_marginRight="35dp"/>
                            <LinearLayout
                                android:id="@+id/llDifferent"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/sentences_wordswap"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/ivDifferentArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/arrow_right_yellow"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llMatching"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_memory"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <ImageView
                                    android:id="@+id/ivMatchingArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/arrow_right_green"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llWordFind"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_wordfind"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <ImageView
                                    android:id="@+id/ivWordFindArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/arrow_right_green"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llPuzzle"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="75"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_puzzle"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="5"/>
                                <ImageView
                                    android:id="@+id/ivPuzzleArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/locked_icon"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"
                                android:background="#E7E1E1"/>
                            <LinearLayout
                                android:id="@+id/llCreateWord"
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="80"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="5"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="80"
                                        android:src="@drawable/games_createword"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="15"/>
                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/ivCreateWordArrow"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="20"
                                    android:src="@drawable/locked_icon"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="5dp"
                                android:layout_marginRight="35dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>
    </LinearLayout>
</RelativeLayout>
